#:kivy 2.0

<InputScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 25
        spacing: 10
        canvas.before:
            Color:
                rgb: 0.3, 0, 0
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "Royal Ranks: Thief Hunt"
            font_size: "30sp"
            color: 1, .8, 0, 1

        TextInput:
            id: p1
            hint_text: "Enter Player 1"
        TextInput:
            id: p2
            hint_text: "Enter Player 2"
        TextInput:
            id: p3
            hint_text: "Enter Player 3"
        TextInput:
            id: p4
            hint_text: "Enter Player 4"

        Button:
            text: "Start Game"
            on_release: root.add_players()

<GameScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 25
        spacing: 10
        canvas.before:
            Color:
                rgb: 0.4, 0, 0
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "KING: " + root.king
            font_size: "25sp"
            color: 1, .9, .2, 1

        Label:
            text: "MINISTER: " + root.minister
            font_size: "25sp"
            color: 0.8, .8, .2, 1

        Label:
            text: "SOLDIER: " + root.soldier
            font_size: "25sp"
            color: .7, .7, .3, 1

        Label:
            text: "THIEF: Unknown!"
            font_size: "25sp"
            color: 1, .2, .2, 1

        Label:
            text: "KING ASK: Who is the thief?"
            font_size: "25sp"
            color: 1, .8, .3, 1

        BoxLayout:
            size_hint_y: 0.2
            spacing: 20
            Button:
                text: "Choice 1"
                on_release: root.check_guess(1)
            Button:
                text: "Choice 2"
                on_release: root.check_guess(2)

<ResultScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 25
        spacing: 10
        canvas.before:
            Color:
                rgb: 0.2, 0, 0
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "üèÜ LEADERBOARD üèÜ"
            font_size: "35sp"
            color: 1, .7, 0, 1

        Label:
            text: root.leaderboard
            font_size: "25sp"
            color: 1, 1, 1, 1

        Button:
            text: "PLAY AGAIN"
            on_release: app.root.current = "input"
